@page
@using HistoricalTrails.Localization
@using HistoricalTrails.Web.Pages.HistoricalPlaces
@using Microsoft.Extensions.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@model CreateModalModel
@inject IStringLocalizer<HistoricalTrailsResource> L
@{
    Layout = null;
}
<abp-dynamic-form abp-model="HistoricalPlace" asp-page="/HistoricalPlaces/CreateModal">
    <abp-modal>
        <abp-modal-header title="@L["NewHistoricalPlace"].Value"></abp-modal-header>
        <abp-modal-body>
            <abp-form-content />
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</abp-dynamic-form>
